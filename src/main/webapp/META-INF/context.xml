<?xml version="1.0" encoding="UTF-8" ?>
<Context>
    <!--Specify a JDBC datasource -->
    <Resource name="jdbc/tasks"
              auth="Container"
              type="javax.sql.DataSource"
              username="postgres"
              password="admin"
              driverClassName="org.postgresql.Driver"
              url="jdbc:postgresql://localhost:5432/tasks?autoReconnect=true"
              validationQuery="select 1"
              maxActive="10"
              maxIdle="4"/>

</Context>